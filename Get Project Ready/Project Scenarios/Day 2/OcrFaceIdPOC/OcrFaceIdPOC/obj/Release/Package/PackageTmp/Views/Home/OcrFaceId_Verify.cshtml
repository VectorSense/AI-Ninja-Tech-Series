    <script type="text/javascript">
         var video;
         var webcamStream;
         var canvas, ctx;
         var videoId = 'video';
         var scaleFactor = 1;
         var snapshots = [];
        $('#ocr_content_table').hide();
         navigator.getUserMedia = (  navigator.getUserMedia ||
                                     navigator.webkitGetUserMedia ||
                                     navigator.mozGetUserMedia ||
                                     navigator.msGetUserMedia
                                    );

         if (navigator.getUserMedia) {
           navigator.getUserMedia (
              // constraints
              {
                 video: true,
                 audio: false
              },
              // successCallback
              function(localMediaStream) {
                  video = document.querySelector('video');
                       if(navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
                // Not adding `{ audio: true }` since we only want video now
                navigator.mediaDevices.getUserMedia({ video: true }).then(function(stream) {
                video.srcObject = stream;
                video.play();
                });
         }
              },
              // errorCallback
              function(err) {
                 console.log("The following error occured: " + err);
              }
           );
         } else {
           console.log("getUserMedia not supported");
         }

        $('#snap_btn').click(function () {
            canvas = document.getElementById("myCanvas");
            var context = canvas.getContext('2d');
            context.drawImage(video, 0, 0, 150, 150);
            var data = canvas.toDataURL('image/png');
            canvas.setAttribute('src', data);
            var img_64_array = data.split(',');
            var ImageBase64 = img_64_array[1];
            //alert(ImageBase64);
            if (ImageBase64 != null) {
                var img1 = JSON.stringify({ data: ImageBase64 });
                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    datatype: "json",
                    data: img1,
                    url: "/Home/FaceIdentification/",
                    success: function (data) {
                        console.log(data.Error);
                        if (data.Error == "") {
                            $('#ocr_content_table').show();
                            $('#user_name').html(data.Result);
                        }
                        else {
                            $("#error_msg").html(data.Error);
                            $("#alert_popup").modal('show');
                        }
                    }


                });
            }
        });


        $("#refresh_btn").click(function () {
            window.location.href = '/Home/OcrFaceId_Verify';
        });
    </script>
